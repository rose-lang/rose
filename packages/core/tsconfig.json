{
  "compilerOptions": {
    // basic stuff, or everything breaks
    "module": "ESNext",
    "moduleResolution": "node16",
    "lib": ["ESNext"],
    "skipLibCheck": true,

    // build config
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,

    // typechecking
    "strict": true
  }
}
