{
  "name": "Rose",
  "scopeName": "source.rose",
  "fileTypes": [".rose"],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#literals"
    },
    {
      "include": "#identifiers"
    },
    {
      "include": "#punctuation"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.rose",
          "match": "//.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.rose",
          "match": "\\b(break|continue|else|if|loop|match|return|while)\\b"
        },
        {
          "name": "keyword.other.rose",
          "match": "\\b(Self|as|enum|fn|for|impl|let|mut|pub|self|struct|trait|type|typeof|use|where|while)\\b"
        }
      ]
    },
    "literals": {
      "patterns": [
        {
          "name": "string.quoted.double.rose",
          "begin": "\"",
          "end": "\""
        },
        {
          "name": "constant.numeric.decimal.rose",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        },
        {
          "name": "constant.language.boolean.rose",
          "match": "\\b(false|true)\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "support.type.primitive.rose",
          "match": "\\b(bool|f32|f64|i32|i64|u32|u64)\\b"
        },
        {
          "name": "entity.name.type.rose",
          "match": "\\b([A-Z]\\w*)\\b"
        },
        {
          "name": "variable.other.rose",
          "match": "\\b(\\w+)\\b"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.rose",
          "match": "[,;\\{\\}\\[\\]\\(\\)]"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.rose",
          "match": "&&|\\|\\||==|!=|>=|<=|::|->|=>"
        },
        {
          "name": "keyword.operator.rose",
          "match": "[+\\-*/!|=><.:]"
        }
      ]
    }
  }
}
