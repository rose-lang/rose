{
  "name": "Rose",
  "scopeName": "source.rose",
  "fileTypes": [".rose"],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#identifiers"
    },
    {
      "include": "#literals"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.rose",
          "match": "#.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.rose",
          "match": "(?<![0-9A-Za-z])(else|for|if|then)(?![0-9A-Za-z])"
        },
        {
          "name": "keyword.other.rose",
          "match": "(?<![0-9A-Za-z])(and|in|mod|not|or)(?![0-9A-Za-z])"
        },
        {
          "name": "storage.type.rose",
          "match": "(?<![0-9A-Za-z])(def|let|type)(?![0-9A-Za-z])"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "entity.name.type.rose",
          "match": "(?<![0-9A-Za-z])([A-Z][0-9A-Za-z]*)(?![0-9A-Za-z])"
        },
        {
          "name": "constant.language.rose",
          "match": "(?<![0-9A-Za-z])(infinity)(?![0-9A-Za-z])"
        },
        {
          "name": "entity.name.function.rose",
          "match": "(?<![0-9A-Za-z])([a-z][0-9A-Za-z]*)(?=\\s*\\()"
        },
        {
          "name": "variable.other.rose",
          "match": "(?<![0-9A-Za-z])([a-z][0-9A-Za-z]*)(?![0-9A-Za-z])"
        }
      ]
    },
    "literals": {
      "patterns": [
        {
          "name": "constant.numeric.rose",
          "match": "(?<![0-9A-Za-z])[0-9]+(?![0-9A-Za-z])"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.rose",
          "match": "!=|\\*|\\+|-|/|<=|==|>="
        },
        {
          "name": "keyword.operator.rose",
          "match": "(<|=|>)(?!=)"
        }
      ]
    }
  }
}
