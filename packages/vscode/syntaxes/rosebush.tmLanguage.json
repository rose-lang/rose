{
  "name": "Rosebush",
  "scopeName": "source.rosebush",
  "fileTypes": [".rose"],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#identifiers"
    },
    {
      "include": "#literals"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.rosebush",
          "match": "#.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.rosebush",
          "match": "(?<![0-9A-Za-z])(else|for|if|then)(?![0-9A-Za-z])"
        },
        {
          "name": "keyword.other.rosebush",
          "match": "(?<![0-9A-Za-z])(and|in|mod|not|or)(?![0-9A-Za-z])"
        },
        {
          "name": "storage.type.rosebush",
          "match": "(?<![0-9A-Za-z])(def|let|type)(?![0-9A-Za-z])"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "entity.name.type.rosebush",
          "match": "(?<![0-9A-Za-z])([A-Z][0-9A-Za-z]*)(?![0-9A-Za-z])"
        },
        {
          "name": "constant.language.rosebush",
          "match": "(?<![0-9A-Za-z])(infinity)(?![0-9A-Za-z])"
        },
        {
          "name": "entity.name.function.rosebush",
          "match": "(?<![0-9A-Za-z])([a-z][0-9A-Za-z]*)(?=\\s*\\()"
        },
        {
          "name": "variable.other.rosebush",
          "match": "(?<![0-9A-Za-z])([a-z][0-9A-Za-z]*)(?![0-9A-Za-z])"
        }
      ]
    },
    "literals": {
      "patterns": [
        {
          "name": "constant.numeric.rosebush",
          "match": "(?<![0-9A-Za-z])[0-9]+(?![0-9A-Za-z])"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.rosebush",
          "match": "!=|\\*|\\+|-|/|<=|==|>="
        },
        {
          "name": "keyword.operator.rosebush",
          "match": "(<|=|>)(?!=)"
        }
      ]
    }
  }
}
