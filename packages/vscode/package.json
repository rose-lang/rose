{
  "name": "rosebush-vscode",
  "displayName": "Rosebush",
  "version": "0.0.0",
  "publisher": "samestep",
  "description": "Syntax highlighting for Rosebush.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rosebush-ad/rosebush",
    "directory": "packages/vscode"
  },
  "icon": "logo.png",
  "private": true,
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "rosebush",
        "aliases": [
          "Rosebush",
          "rosebush"
        ],
        "extensions": [
          ".rose"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "rosebush",
        "scopeName": "source.rosebush",
        "path": "./syntaxes/rosebush.tmLanguage.json"
      }
    ]
  },
  "devDependencies": {
    "@vscode/vsce": "^2",
    "svgexport": "^0.4"
  },
  "scripts": {
    "package": "vsce package --yarn",
    "vscode:prepublish": "svgexport ../../site/logo.svg logo.png"
  }
}
