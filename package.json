{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@vscode/vsce": "^2",
    "prettier": "^2",
    "prettier-plugin-organize-imports": "^3",
    "rimraf": "^5",
    "typescript": "^5",
    "esbuild": "^0.17.19",
    "vitest": "^0.31.2"
  },
  "scripts": {
    "build": "yarn workspace @rose-lang/core build",
    "vscode": "yarn workspace rose package",
    "wasm": "cargo build --package=rose-web --target=wasm32-unknown-unknown --release --features wasm-bindgen && yarn workspace  @rose-lang/wasm build",
    "test": "vitest"
  }
}
