{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@vscode/vsce": "^2",
    "prettier": "^2",
    "prettier-plugin-organize-imports": "^3",
    "rimraf": "^5",
    "svgexport": "^0.4",
    "typescript": "^5"
  },
  "scripts": {
    "build": "yarn workspace rosebush build",
    "vscode": "yarn workspace rosebush-vscode package",
    "wasm": "rimraf packages/core/wbg && cargo build --package=rosebush-web --target=wasm32-unknown-unknown --release && wasm-bindgen --target=web --out-dir=packages/core/wbg target/wasm32-unknown-unknown/release/rosebush_web.wasm"
  }
}
